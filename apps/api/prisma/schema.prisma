// Prisma schema for PostgreSQL
// Matches AuthUser contract from @digitaloffices/contracts

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  EXPERT
  ADMIN
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique // backend-generated, human-readable, for URLs e.g. /profile/{username}
  email         String    @unique
  passwordHash  String?   // null for OAuth-only users
  firstName     String
  lastName      String
  emailVerified Boolean   @default(false)
  emailVerifiedAt DateTime?
  provider      String    @default("credentials") // 'credentials' | 'google'
  providerId    String?   // Google user ID for OAuth users
  role          UserRole  @default(USER) // USER | EXPERT | ADMIN
  isBlocked     Boolean   @default(false)
  isUnlisted    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Email verification tokens
  emailVerificationTokens EmailVerificationToken[]

  // Refresh tokens for session management
  refreshTokens RefreshToken[]

  // Expert profile (if user is an expert)
  expertProfile ExpertProfile?

  @@map("users")
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("email_verification_tokens")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("refresh_tokens")
}

model ExpertProfile {
  id                    String    @id @default(uuid())
  userId                String    @unique
  verificationStatus    VerificationStatus @default(PENDING)
  rejectionReasons      String[]  @default([])
  verifiedAt            DateTime?
  verifiedBy            String?   // Admin user ID who verified
  specialization        String?
  experience            String?   // Years of experience
  qualifications        String?   // JSON array of qualifications
  bio                   String?
  website               String?
  linkedin              String?
  portfolio             String?
  pendingChanges        Json?     // Store pending changes for re-verification
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("expert_profiles")
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}
