// Prisma schema for PostgreSQL
// Matches AuthUser contract from @digitaloffices/contracts

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique // backend-generated, human-readable, for URLs e.g. /profile/{username}
  email         String    @unique
  passwordHash  String?   // null for OAuth-only users
  firstName     String
  lastName      String
  emailVerified Boolean   @default(false)
  emailVerifiedAt DateTime?
  provider      String    @default("credentials") // 'credentials' | 'google'
  providerId    String?   // Google user ID for OAuth users
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Email verification tokens
  emailVerificationTokens EmailVerificationToken[]

  // Refresh tokens for session management
  refreshTokens RefreshToken[]

  @@map("users")
}

model EmailVerificationToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("email_verification_tokens")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("refresh_tokens")
}
